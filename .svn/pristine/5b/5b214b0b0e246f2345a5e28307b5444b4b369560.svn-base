			var list = ret.prodList;
			for (i in list) {
				$("#qnrId").append('<option value=' + list[i].productId + '>' + list[i].productId + '</option>')
			}
		}
		function error() {
		}
	}
</script>
<script type="text/javascript">
	function clearFrom() {
		$(':input', '#userform')
			.not(':button, :submit, :reset, :hidden')
			.val('')
			.removeAttr('checked')
			.removeAttr('selected');

	}
	function clearFrom1() {
		$(':input', '#Pushadd')
			.not(':button, :submit, :reset, :hidden')
			.val('')
			.removeAttr('checked')
			.removeAttr('selected');

	}
</script>
<script>
/* 产品添加 */

	$(".addProd").click(function() {
		$api.ui_openLoading('提示', '用户信息更新中，请耐心等待......');
		window.setTimeout(function() {
			$api.ui_closeLoading();
		}, 500);
		var name = $("#name").val();
		var model = $("#model").val();
		var type = $("#type").val();
		var brands = $("#brands").val();
		var description = $("#description").val();
		var data = {};
		data.appId = appId;
		data.name = name;
		data.model = model;
		data.type = type;
		data.brands = brands;
		data.description = description;
		$pow.saveProdInfo(data, success, error);
		function success() {
			refreshTableData();
			$("#myModal").modal("hide");
			clearFrom();
		}
		;
