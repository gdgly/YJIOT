			with(curr_time)
			{
			var strDate = getYear() + 1900 + "-";
			strDate += getMonth() + 1 + "-";
			strDate += getDate() + "-";
			strDate += getHours() + ":";
			strDate += getMinutes() + ":";
			strDate += getSeconds();
